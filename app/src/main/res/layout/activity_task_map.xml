<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".task.TaskMapActivity">


    <fragment
        android:id="@+id/travel_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.currentplacedetailsonmap.MapsActivityCurrentPlace"
        class="com.google.android.gms.maps.MapFragment" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:padding="10dp"
        android:background="@drawable/bg_action_bar">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:maxWidth="22dp"
            android:maxHeight="35dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_back"/>

        <TextView
            android:id="@+id/text_map_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:text="@string/text_task"/>

        <ImageButton
            android:id="@+id/btn_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:maxWidth="32dp"
            android:maxHeight="33dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center|center_vertical"
            android:src="@drawable/btn_task"/>

        <ImageButton
            android:id="@+id/btn_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:maxWidth="32dp"
            android:maxHeight="33dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center|center_vertical"
            android:src="@drawable/btn_customer"/>

        <ImageButton
            android:id="@+id/btn_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:maxWidth="32dp"
            android:maxHeight="33dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_staff"/>
    </LinearLayout>

</FrameLayout>