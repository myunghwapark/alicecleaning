<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/text_work_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/btnBorderGray"
        android:singleLine="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_staff_working_time"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/redOrange"
        android:singleLine="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_staff_wages"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/redOrange"
        android:singleLine="true"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_pay_complete_yn"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="@drawable/btn_round_gray"
        android:gravity="center"
        android:text="@string/text_unpaid"
        android:textColor="@color/white"
        android:textSize="12sp" />


</LinearLayout>
